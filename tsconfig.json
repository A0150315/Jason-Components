{
  "compilerOptions": {
    "outDir": "build",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "sourceMap": true,
    "typeRoots": [
      "node_modules/@types",
      "./src/typings"
    ],
    "allowJs": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "src"
  ],
  "extends": "./tsconfig.paths.json",
  "exclude": [
    "node_modules"
  ]
}
